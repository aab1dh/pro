{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "plugin:@stencil/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@typescript-eslint", "prettier", "jasmine"],
  "rules": {
    "@stencil/decorators-context": "warn",
    "@stencil/required-jsdoc": "warn",
    "react/jsx-no-bind": "off",
    "@stencil/strict-boolean-conditions": "warn",
    "no-undef": "warn",
    "@typescript-eslint/no-unsafe-return": "warn",
    "@typescript-eslint/no-unsafe-assignment": "warn",
    "@typescript-eslint/no-inferrable-types": "warn",
    "prettier/prettier": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "rules": {
        "react/prop-types": "off"
      }
    }
  ],
  "ignorePatterns": ["dist/", "loader/", "www/", "node_modules/", "src/serviceWorker.ts"],
  "env": {
    "jasmine": true
  }
}
