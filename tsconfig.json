{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "lib": ["dom", "es2017"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "pretty": true,
    "paths": {
      "@utils": ["packages/utils/index.ts"]
    },
  },
  "include": ["lib/components/src", "lib/components/global.d.ts", "packages/utils", "src"],
  "exclude": []
}
